<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".pastorder.PastOrderedProductListView">

    <RelativeLayout
        android:id="@+id/p_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/PastorderedProductUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saravana Murali"
            android:textStyle="bold"
            android:textColor="@color/FragmentGreen"
            android:textSize="@dimen/twenty_dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pastOrderedProductListViewR_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_userName"
        android:layout_marginTop="@dimen/ten_dp">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/pastOrderedProductListGrandTotalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grand Total"
        android:gravity="center"
        android:layout_marginLeft="@dimen/ten_dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/pastOrderedProductListViewR_View"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_alignParentLeft="true"
        />


    <TextView
        android:id="@+id/pastOrderedProductListGrandTotal"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="1000"
        android:gravity="center"
        android:layout_below="@+id/pastOrderedProductListViewR_View"
        android:layout_marginTop="@dimen/ten_dp"
        android:padding="@dimen/five_dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
        android:textStyle="bold"
        android:layout_alignParentRight="true"

        />




</RelativeLayout>