<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/two_dp"
    android:layout_marginTop="1dp"
    android:layout_marginRight="@dimen/two_dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:transitionName="open_mediaplayer"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp">

            <TextView
                android:id="@+id/p_ProductName"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:gravity="center|left"
                android:text="ProductName" />

            <TextView
                android:id="@+id/p_Count"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/p_ProductName"
                android:gravity="center"
                android:text="3" />

            <TextView
                android:id="@+id/p_totalPrice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/p_Count"
                android:gravity="center"
                android:text="1500" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>