<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signin.NewPassAndConfirmPassForLoginForgetPassword_At_ViewCart">

    <LinearLayout
        android:id="@+id/newPasswordBlockForLoginForgetPassword_AtViewCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="83dp"
        android:layout_marginRight="15dp"
        android:background="@color/White"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/newPasswordForLoginForgetPassword_At_ViewCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="New Password"
                android:textColorHint="@color/green"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/confirmPasswordBlockForLoginForgetPassword_AtViewCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPasswordBlockForLoginForgetPassword_AtViewCart"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:background="@color/White"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/confirmPasswordForLoginForgetPassword_AtViewCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Confirm Password"
                android:textColorHint="@color/green"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <Button
        android:id="@+id/confirmButtonForLoginForgetPassword_AtViewCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/GreenSignup"
        android:layout_below="@+id/confirmPasswordBlockForLoginForgetPassword_AtViewCart"
        android:layout_centerHorizontal="true"
        android:onClick="onClickSubmitForLoginForgetPassword_AtViewCart"
        android:layout_marginTop="10dp" />

</RelativeLayout>